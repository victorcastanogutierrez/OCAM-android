<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="30sp"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lbParticipa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="30sp"
            android:textSize="19sp"
            android:visibility="gone"
            android:text="@string/aviso_unido"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10sp">

            <TextView android:id="@+id/lbEstadoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingTop="30sp"
                android:textSize="14sp"
                android:text="Estado: "/>

            <TextView android:id="@+id/lbEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30sp"
                android:textSize="14sp"
                android:text="Victor"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10sp"
            android:paddingRight="30sp">

            <TextView android:id="@+id/lbOrganizaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingTop="30sp"
                android:textSize="14sp"
                android:text="Organiza "/>

            <TextView android:id="@+id/lbOrganiza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30sp"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingTop="30sp"
            android:background="@android:color/darker_gray"/>

        <TextView android:id="@+id/lbDescripcionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="30sp"
            android:textSize="16sp"
            android:text="Descripción"/>

        <TextView android:id="@+id/lbDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15sp"
            android:textSize="14sp"
            android:paddingLeft="15sp"/>

        <TextView android:id="@+id/lbFechaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="30sp"
            android:textSize="16sp"
            android:text="Fecha prevista de realización"/>

        <TextView android:id="@+id/lbFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15sp"
            android:textSize="14sp"
            android:paddingLeft="15sp"/>

        <TextView android:id="@+id/lbDetalleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="30sp"
            android:textSize="14sp"
            android:text="Detalle de la actividad"/>

        <TextView android:id="@+id/lbDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:textSize="14sp"
            android:visibility="gone"
            android:paddingLeft="15sp"/>

        <TextView android:id="@+id/lbMide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:textSize="14sp"
            android:visibility="gone"
            android:paddingLeft="15sp"/>

        <TextView android:id="@+id/lbPlazas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:textSize="14sp"
            android:visibility="gone"
            android:paddingLeft="15sp"/>

        <Button
            android:id="@+id/btUnirse"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="15sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="Participar en la actividad" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10sp"
            android:visibility="gone"
            android:id="@+id/linearGuia">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="30sp"
                android:background="@android:color/darker_gray"/>

            <TextView android:id="@+id/lbGuiaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingTop="30sp"
                android:paddingLeft="15sp"
                android:textSize="16sp"
                style="@style/AppTheme"
                android:text="Eres guía de la actividad"/>

            <Button
                android:id="@+id/btComenzar"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="15sp"
                android:text="Comenzar actividad" />

            <Button
                android:id="@+id/btCambiarPassword"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:visibility="gone"
                android:text="Cambiar password" />


        </LinearLayout>

        <Button
            android:id="@+id/btAbandonar"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:visibility="gone"
            android:text="Abandonar actividad" />

        <Button
            android:id="@+id/btMonitorizar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="15sp"
            android:enabled="false"
            android:text="Monitorizar actividad" />

        <Button
            android:id="@+id/btCerrar"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:visibility="gone"
            android:text="Cerrar actividad" />
    </LinearLayout>
</ScrollView>